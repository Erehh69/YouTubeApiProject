@model YouTubeApiProject.Models.YouTubeVideoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your existing layout
    ViewData["Title"] = Model.Video.Title;
}

<div class="container mt-5">
    <!-- Video Title -->
    <h2 class="text-center">@Model.Video.Title</h2>

    <!-- YouTube Video Embed with larger size -->
    <div class="video-container mb-4">
        <iframe src="https://www.youtube.com/embed/@Model.Video.VideoId?autoplay=1"
                frameborder="0"
                allowfullscreen></iframe>
    </div>

    <!-- Video Description -->
    <div class="mt-4">
        <h5 class="font-weight-bold">Description:</h5>
        <p>@Model.Video.Description</p>
    </div>

    <!-- Related Videos Section -->
    <h5 class="font-weight-bold mt-5">Related Videos:</h5>
    <div class="row mt-3">
        @foreach (var relatedVideo in Model.RelatedVideos)
        {
            <div class="col-md-4 d-flex align-items-stretch mb-4">
                <div class="card shadow-sm w-100">
                    <img class="card-img-top" src="@relatedVideo.ThumbnailUrl" alt="@relatedVideo.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@relatedVideo.Title</h5>
                        <a href="@Url.Action("Watch", "Watch", new { id = relatedVideo.VideoId })" class="btn btn-danger w-100">Watch</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom CSS -->
<style>
    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
        height: 0;
        overflow: hidden;
        max-width: 100%;
        background: black;
    }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>
