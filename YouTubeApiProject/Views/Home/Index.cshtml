@model List<YouTubeApiProject.Models.YouTubeVideoModel>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Welcome text and trending videos section -->
<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to TubeQuest Explorer</h1>
        <p>Explore trending videos or search for your favorite content!</p>
        <a href="/YouTube/Index" class="btn btn-primary btn-lg">Search Videos</a>
    </div>

    <!-- Trending Videos Section -->
    <div class="mt-5">
        <h2 class="text-center">Trending Videos</h2>
        <div class="row mt-4">
            @foreach (var video in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card video-card">
                        <!-- Added video-card class for hover effect -->
                        <img class="card-img-top" src="@video.ThumbnailUrl" alt="@video.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@video.Title</h5>
                            <p class="card-text">
                                <strong>Views:</strong> @video.ViewCount<br />
                                <strong>Likes:</strong> @video.LikeCount
                            </p>
                            <a href="https://www.youtube.com/watch?v=@video.VideoId" target="_blank" class="btn btn-danger">Watch on YouTube</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
